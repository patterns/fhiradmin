<div class="box ">
  <NavPagination @links={{this.meta}} />
  <table class="table is-fullwidth">
    <tbody>
      {{#each @patients as |patient|}}
        <tr>
          <td>{{patient.resourceType}}</td>
          <td>{{patient.id}}</td>
          <td>{{official-name patient}}</td>
          <td>
            <button {{action "zoom" patient.id}} class="button is-primary is-outlined"><span>Show</span></button>
          </td>
          <td>
            <a class="button is-primary is-outlined" disabled><span>Delete</span><span class="icon is-small"><i class="fa fa-times"></i></span></a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <NavPagination @links={{this.meta}} />
</div>
