<div class="box has-background-grey-light">
  <NavPagination @links={{this.meta}} />
  <table class="table is-fullwidth">
    <tbody>
      {{#each @encounters as |encounter|}}
        <tr>
          <td>{{encounter.resourceType}}</td>
          <td>{{encounter.id}}</td>
          <td>{{encounter.type}}</td>
          <td>{{encounter.period}}</td>
          <td>{{encounter.status}}</td>
          <td>
            <button {{action "zoom" encounter.id}} class="button is-primary is-outlined"><span>Show</span></button>
          </td>
          <td>
            <a class="button is-primary is-outlined" disabled><span>Delete</span><span class="icon is-small"><i class="fa fa-times"></i></span></a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <NavPagination @links={{this.meta}} />
</div>
