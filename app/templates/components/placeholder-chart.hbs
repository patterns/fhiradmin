<svg viewBox="0 0 600 100">
  <g>
    <line x1="5" x2="5" y1="5" y2="98" stroke-dasharray="1 2" stroke="black" stroke-width="1" />
  </g>
  <g>
    <line x1="5" x2="500" y1="99" y2="99" stroke-dasharray="1 2" stroke="black" stroke-width="1" />
  </g>
  {{#each @segments as |seg index|}}
    {{#if (gt seg.count 0)}}

      <polyline     fill="none"     stroke-width="3"
         stroke={{get this.stroke index}}
         points={{get this.points index}} />

    {{/if}}
  {{/each}}
</svg>
